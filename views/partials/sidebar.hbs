<aside class="sidebar main__sidebar ">
    <h3 class="sidebar__title">
        Рубрики
    </h3>
    {{> rubrics }}
    {{#if lastComments}}
    <h3 class="sidebar__title">
        Комментарии
    </h3>
    <div class="sidebar__comments">
        {{#each lastComments}}
        <figure class="sidebar__comments-item">
            <img class="sidebar__comments-img" src="/img/placeholders/comment-img.png" width="38" alt="Аватарка" >
            <figcaption>
                <p class="sidebar__comments-text">{{this.text}}</p>
                <p class="sidebar__comments-author">{{this.user.username}}</p>
            </figcaption>
        </figure>
        {{/each}}
    </div>
    {{/if}}

    {{> instagram}}
</aside>